<div class="container">
  <div class="row justify-content-center my-5">
    <div class="col">
      <div class="modal-body text-center mb-3">
        <!--イベント詳細-->
        <div class="d-flex justify-content-center">
          <h1><%= @event.name %></h1> <!--イベント名-->
        </div>
        <p class="text-muted">
          <% if @event.season_start == @event.season_end %> <!--イベント期間-->
            <%= l @event.season_start %>
          <% else %>
            <%= l @event.season_start %>〜<%= l @event.season_end %>
          <% end %>
        </p>
        <%= image_tag @event.get_event_image, size: "300x300", class: "img-fluid d-block mx-auto mb-3" %>
        <p><%= @event.introduction %></p>
        <ul class="list-inline">
          <li>
            <strong>時間: </strong>
            <% if @event.time_start == @event.time_end %>
              <%= l @event.time_start, format: :time %>
            <% else %>
              <%= l @event.time_start, format: :time %>~<%= l @event.time_end, format: :time %>
            <% end %>
          </li>
          <li>
            <strong>場所: </strong>
            <%= @event.place %>
          </li>
          <li>
            <strong>料金: </strong>
            <% if @event.price == 0 %>
              無料
            <% else %>
              <%= @event.price.to_s(:delimited) %>円
            <% end %>
          </li>
        </ul>
        <div class="text-dark text-break"><i class="fas fa-tag"></i> <%= @event.tags.map(&:tagname).join(', ') %></div>
        <div class="mt-3">
          <%= link_to "イベントを削除する", event_path(@event), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-outline-danger rounded-pill" %>
        </div>
      </div>
    </div>
  </div>
</div>