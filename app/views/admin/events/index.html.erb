<div class="container my-5">
  <div class="row">
    <h4 class="mb-4 ml-5">イベント一覧</h4>
  </div>
  <div class="row px-5">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th style="width: 40%">ユーザー名</th>
          <th>イベント名</th>
        </tr>
      </thead>
      <tbody>
        <!--イベント一覧表示-->
      <% @events.each do |event| %>
        <tr>
          <td><%= event.user.name %></td>
          <td><%= link_to event.name, admin_event_path(event.id), class: "text-reset border-bottom border-dark" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <!--ページネーション-->
  <div class="row justify-content-center mt-5">
    <%= paginate @events %>
  </div>
</div>