<% if event.bookmarked_by?(current_user) %>
  <div>
    <%= button_to event_bookmarks_path(event), method: :delete, remote: true, class: "button_border_none" do %>
      <div>bookmarkを外す</div>
    <% end %>
  </div>
<% else %>
  <div>
    <%= button_to event_bookmarks_path(event), method: :post, remote: true, class: "button_border_none" do %>
      <div class="btn btn-primary">bookmark</div>
    <% end %>
  </div>
<% end %>
