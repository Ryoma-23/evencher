<div class="container">
  <div class="row my-5">
    <div class="col-3">
      <%= image_tag @user.get_profile_image, size: "100x100", class: "rounded-circle" %>
      <h3><%= @user.name %></h3>
      <div><%= @user.email %></div>
      <% if @user == current_user %>
        <div><%= link_to "プロフィール編集", edit_user_path %></div>
        |
        <div><%= link_to "ブックマーク一覧", bookmark_users_path %></div>
      <% end %>
    </div>
    <div class="col-6 mx-auto">
      <%= render "public/events/index", events: @events %>
      <div class="row justify-content-center mt-5">
        <%= paginate @events %>
      </div>
    </div>
    <div class="col-3 pl-5">

    </div>
  </div>
</div>