<div class="container">
  <div class="row mt-5">
    <div class="col-3">
      <div class="img-container"><%= image_tag @user.get_profile_image, size: "100x100", class: "rounded-circle" %></div>
      <h3><%= @user.name %></h3>
      <div><%= @user.email %></div>
      <% if @user == current_user %>
        <div class="mt-3"><%= link_to "プロフィール編集", edit_user_path, class: "btn btn-outline-warning rounded-pill" %></div>
        <div class="mt-3">
          <%= link_to bookmark_users_path, class: "btn btn-outline-dark rounded-pill" do %>
            <i class="fas fa-bookmark"></i> ブックマーク
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-6 mx-auto">
      <%= render "public/events/index", events: @events %>
      <div class="row justify-content-center mt-5">
        <%= paginate @events %>
      </div>
    </div>
    <div class="col-3">

    </div>
  </div>
</div>