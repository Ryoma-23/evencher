<%= form_with model: group, url: event_groups_path(event), method: :post, local: true do |f| %> <!--グループ作成フォーム-->
  <div class="form-group">
    <%= f.text_field :name, class: 'form_control', placeholder: "グループ名", class:"form-control form-control-lg mb-3" %>
  </div>

  <div class="form-group text-center">
    <%= f.submit "グループ作成", class: "btn btn-info btn-lg" %>
  </div>
<% end %>