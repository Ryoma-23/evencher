<div class='container'>
  <div class='row my-5'>
    <div class='col-lg-7'>
      <h2>グループチャット</h2>
      <!--チャットフォーム-->
      <div>
        <%= form_with model: @chat, url: event_group_chats_path(@group.event, @group.id), local:true do |f| %> <!--チャットの新規作成-->
          <div class="d-flex mb-3">
            <%= f.text_field :message, placeholder: "チャットする...", class: "form-control" %>
            <%= f.hidden_field :group_id %>
            <%= f.submit "chat", class: "btn btn-success w-25" %>
          </div>
        <% end %>
        <%#= render 'public/chats/form', chat: @chat, group: @group %> <!--チャットの新規作成-->

        <!----<div class="error-alert"></div>  <!--エラーメッセージを表示-->

        <!--<div id="chats_area">-->
          <%#= render 'public/chats/group_chats', chats: @chats %> <!--チャット履歴の表示-->
        <!--</div>-->
        <% if @chats.present? %>
          <% @chats.each do |chat| %> <!--チャット履歴の表示-->
            <div class="d-flex mb-3">
              <div>
                <%= image_tag chat.user.get_profile_image, size: "50x50", class: "rounded-circle mr-2" %>
              </div>
              <div class="d-flex flex-column">
                <div><%= chat.user.name %></div>
                <div><%= chat.message %></div>
              </div>
            </div>
          <% end %>
        <% else %>
          <p>チャットはまだありません</p>
        <% end %>
      </div>
    </div>
    <div class="col-5">
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>グループ名</th>
            <th>メンバー</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @group.name %></td>
            <td>
              <% @group.users.each do |member| %>
                <%= member.name %><br>
              <% end %>
            </td>
            <td>
              <div><%= link_to '退会する', event_group_withdrawal_path(@group.event, @group), method: :delete, class: "btn btn-sm btn-outline-danger" %></div>
              <div>
                <% if @group.owner_id == current_user.id %>
                  <%= link_to "グループ削除", event_group_path(@group.event, @group), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-outline-danger" %>
                <% end %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>