<div class='container'>
  <div class='row my-5'>
    <div class='col-lg-7'>
      <h2>グループチャット</h2>
      <!--チャットフォーム-->
      <div>

        <%= render 'public/chats/form', chat: @chat, group: @group %> <!--チャットの新規作成-->

        <div id="chats_area">
          <% if @chats.blank? %>
            <div id="no-chat">チャットはまだありません</div>
          <% end %>
          <% @chats.each do |chat| %> <!--チャット履歴の表示-->
            <%= render 'public/chats/group_chats', chat: chat %>
          <% end %>
          <div class="row justify-content-center mt-5">
            <%= paginate @chats %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-5">
      <%= render 'public/chats/chat_members', group: @group %>
    </div>
  </div>
</div>