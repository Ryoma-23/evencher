<h2>Groups</h2>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>グループ名</th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
    <tr>
      <td><%= link_to group.name, event_group_path(group.event, group) %></td>
      <td>(<%= group.users.count %>)</td>
      <td>
        <% if group.users.include?(current_user) %>
          <%= link_to '退会', event_group_withdrawal_path(group.event, group), method: :delete, class: "btn btn-sm btn-danger" %>
        <% else %>
          <%= link_to '参加', event_group_join_path(group.event, group), class: "btn btn-sm btn-success" %>
        <% end %>
      </td>
    </tr>
    <% end%>
  </tbody>
</table>